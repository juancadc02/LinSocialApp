
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Tu título aquí</title>

    <!-- Integra los estilos CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Otros estilos personalizados si los tienes -->
    <link rel="stylesheet" href="tu_ruta_a_tus_estilos.css">
    <style>
        body {
            background-image: url('/imagenes/fotoFondoInicioSesion.jpg'); /* Ajusta la ruta y el nombre de tu imagen */
            background-size: cover; /* Cubre todo el área del body sin distorsionar */
            background-repeat: no-repeat; /* Evita que se repita la imagen */
            background-position: center; /* Centra la imagen */
            height: 100vh; /* Establece la altura del body al 100% de la ventana */
            margin: 0; /* Elimina el margen predeterminado del body */
        }
    </style>
</head>
<body>
    <section class="background-radial-gradient vh-100 overflow-hidden">
        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                        Bienvenido a<br />
                        <span style="color: hsl(216, 20%, 5%)">LinkSocial</span>
                    </h1>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>


                    <div id="formularioInicio" class="card bg-glass">
                        <div class="card-body px-4 py-5 px-md-5">

                            <form method="post" action="@Url.Action("IniciarSesion", "ControladorIniciarSesion")">

                                <!-- Email -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="correoElectronico">Correo</label>
                                    <input type="email" id="correoElectronico" name="correoElectronico" class="form-control" />
                                </div>

                                <!-- Contraseña -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="contraseña">Contraseña</label>
                                    <input type="password" id="contraseña" name="contraseña" class="form-control" />
                                </div>

                                <!-- Botón de Iniciar Sesión -->
                                <button id="btn-iniciarSesion" type="submit" class="btn btn-primary btn-block mb-4">
                                    Iniciar Sesión
                                </button>

                                <!-- Otras opciones -->
                                <div class="text-center">
                                    <p>¿No estás registrado? <a asp-controller="ControladorRegistrarUsuarios" asp-action="irARegistro">Registrar</a></p>
                                    <p>O regístrate con:</p>
                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="bi bi-facebook"></i>
                                    </button>
                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="bi bi-google"></i>
                                    </button>
                                    <button type="button" class="btn btn-link btn-floating mx-1">
                                        <i class="bi bi-twitter"></i>
                                    </button>
                                </div>

                            </form>
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @TempData["Error"]
                                </div>
                            }
                            @if (TempData["MensajeRegistroExitoso"] != null)
                            {
                                <div class="alert alert-success" role="alert">
                                    @TempData["MensajeRegistroExitoso"]
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
