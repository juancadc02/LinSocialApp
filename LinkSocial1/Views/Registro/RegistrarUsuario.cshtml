
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Tu título aquí</title>

    <!-- Integra los estilos CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Otros estilos personalizados si los tienes -->
    <link rel="stylesheet" href="tu_ruta_a_tus_estilos.css">
    <style>
        body {
            background-color: #926BB7;
        }
    </style>
</head>
<body>
    <section class="background-radial-gradient vh-100 overflow-hidden">
        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                        Registrate para formar para de <br />
                        <span style="color: hsl(216, 20%, 5%)">LinkSocial</span>
                    </h1>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>


                    <div id="formularioInicio" class="card bg-glass">
                        <div class="card-body px-4 py-5 px-md-5">

                            <form method="post" action="@Url.Action("RegistrarUsuario", "ControladorRegistrarUsuarios")">

                                <!-- Email -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="nombreCompleto">Nombre Completo.</label>
                                    <input type="text" id="nombreCompleto" name="nombreCompleto" class="form-control" />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="correoElectronico">Correo.</label>
                                    <input type="email" id="correoElectronico" name="correoElectronico" class="form-control" />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="dniUsuario">Dni.</label>
                                    <input type="text" id="dniUsuario" name="dniUsuario" class="form-control" />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="movilUsuario">Movil.</label>
                                    <input type="tel" id="movilUsuario" name="movilUsuario" class="form-control" />
                                </div>

                                <!-- Contraseña -->
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="contraseña">Contraseña</label>
                                    <input type="password" id="contraseña" name="contraseña" class="form-control" />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="contraseña">Fecha Nacimiento.</label>
                                    <input type="date" id="fchNacimiento" name="fchNacimiento" class="form-control" />
                                </div>
                                
                                <!-- Botón de Iniciar Sesión -->
                                <button id="btn-registrar" type="submit" class="btn btn-primary btn-block mb-4">
                                    Crear Cuenta
                                </button>
                              
                            </form>
                            @if (TempData["ErrorRegistro"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["ErrorRegistro"]
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
