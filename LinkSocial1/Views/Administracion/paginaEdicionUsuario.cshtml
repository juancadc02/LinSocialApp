@model DB.Modelo.Usuarios
<!doctype html>


<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Hello, world!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="styles.css">
    <style>
        #sidebar {
            width: 20%;
            height: 100vh;
            background: #343a40;
        }
    </style>
</head>


<div class="d-flex">
    <div id="sidebar">
        <div class="p-2">
            <a href="#" class="navbar-brand text-center text-light w-100 p-4 border-bottom">
                LinkSocial
            </a>
        </div>
        <div id="sidebar-accordion" class="accordion">
            <div class="list-group">

                <a asp-controller="ControladorAdministracion" asp-action="irUsuario" data-toggle="collapse" aria-expanded="false"
                   class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="fa fa-cog mr-3" aria-hidden="true"></i>Usuarios
                </a>
            </div>
        </div>
    </div>

    <div class="flex-grow-1">
        <div class="container">
            <h2 style="text-align:center;">Actualizar Usuarios</h2>
        </div>
        <form asp-controller="ControladorAdministracion" asp-action="GuardarEdicion" method="post">
            <input type="hidden" asp-for="idUsuario" />
            <input type="hidden" asp-for="dniUsuario" />
            <input type="hidden" asp-for="contraseña" />

            <div class="form-outline mb-4">
                <label class="form-label" for="nombreCompleto">Nombre Completo.</label>
                <input type="text" asp-for="nombreCompleto" class="form-control" />
            </div>

            <div class="form-outline mb-4">
                <label class="form-label" for="correoElectronico">Correo Electronico.</label>
                <input type="email" class="form-control" asp-for="correoElectronico" />
            </div>

            <div class="form-outline mb-4">
                <label class="form-label" for="movilUsuario">Telefono</label>
                <input type="tel" asp-for="movilUsuario" class="form-control" />
            </div>

            <div class="form-outline mb-4">
                <label class="form-label" for="rolAcceso">Rol.</label>
                <select class="form-control" asp-for="rolAcceso" id="rolAcceso" name="rolAcceso">
                    <option value="basico">Basico</option>
                    <option value="admin">Administrador</option>
                </select>
            </div>

            <button id="btn-actualizar" type="submit" class="btn btn-primary">
                Actualizar Datos
            </button>
        </form>
    </div>
   
</div>
